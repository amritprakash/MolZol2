<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:padding="8dp"
    tools:context="co.molzol.molzol.StoreDialogFragment">

    <TextView
        android:id="@+id/dialog_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Flipkart"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_store_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_store_name"
        app:srcCompat="@drawable/flipkart1" />

    <TextView
        android:id="@+id/dialog_redeem_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Test"
        android:textAlignment="gravity"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/dialog_store_img"
        app:layout_constraintTop_toBottomOf="@id/dialog_store_name" />

    <TextView
        android:id="@+id/dialog_redeem_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Double your Cashback"
        android:textAlignment="gravity"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/dialog_store_img"
        app:layout_constraintTop_toBottomOf="@id/dialog_redeem_text1" />

    <TextView
        android:id="@+id/dialog_redeem_text3"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Additional Discount"
        android:textAlignment="gravity"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/dialog_store_img"
        app:layout_constraintTop_toBottomOf="@id/dialog_redeem_text2" />

    <Button
        android:id="@+id/visitStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="VISIT STORE"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="#CashbackWillBeCreditedWithin48Hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_store_img" />

</android.support.constraint.ConstraintLayout>
